<div class="panel panel-default">
  <div class="panel-heading text-center">
    <h3>メッセージ一覧</h3>
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info col-xs-2"><%= message.name %></span>
      <span class="panel panel-default col-xs-9" style="margin-left:20px;"><%= message.body %></span>
      <br>
    <% end %>
  </div>
</div>

