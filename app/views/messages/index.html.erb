<div class="panel panel-default">
  <div class="panel-heading text-center">
    <h3>メッセージ一覧</h3>
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info col-xs-2"><%= message.name %></span>
      <span class="panel panel-default col-xs-9" style="margin-left:20px;"><%= message.body %></span>
      <br>
    <% end %>
  </div>
</div>
<div class="form-horizontal" role="form">
  <%= form_for(@message) do |f| %>
    <div class="form-group">  
      <label for="name" class="col-xs-1 control-label">名前：</label>
      <div class="col-xs-5">
      <%= f.text_field :name,:class=> "form-control",:id=> "name" %>
      </div>
    </div>
  
    <div class="form-group">
      <label for="body" class="col-xs-1 control-label">内容：</label>
      <div class="col-xs-10">
      <%= f.text_area :body,:class=> "form-control",:id=> "body" %>
      </div>
    </div>
    <br>
    <div class="form-group">
    <%= f.submit "送信", class: "btn btn-sm btn-primary col-xs-offset-1 col-xs-2" %>
    </div>
  <% end %>
</div>
